<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd/MM HH:mm:ss} %5p [%c:%L] - %m%n</pattern>
        </encoder>
    </appender>



    <logger name="org.quartz" additivity="false">
        <level value="WARN" />
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.glassfish.jersey.media.sse" additivity="false">
        <level value="WARN" />
        <appender-ref ref="STDOUT" />
    </logger>


    <logger name="org.inugami.scheduling">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>


    <logger name="org.hibernate">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.ehcache">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.jboss">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.jboss.resteasy.cdi">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>


    <logger name="org.picketlink">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="SSE">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.apache.kafka">
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </logger>



    <root level="DEBUG">
        <appender-ref ref="STDOUT" />

    </root>

</configuration>